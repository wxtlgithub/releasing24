<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="mtsGatewayModule2454" class="com.lxt2.gateway.sms.module.SmsGatewayModule">
		<property name="id" value="2454"/>
		<property name="name" value="下行发送SGIP"/>
		<property name="hub" ref="hubImpl"/>
		<property name="submitQueue" ref="mtsSubmitQueue2454"/>
		<property name="adapter" ref="mtsPersistentSubmitQueueAdapter2454"/>
		<property name="gateway" ref="mtsSgipGateway2454"/>
		<property name="status" value="STOP"/>
		<property name="configList">
			<list>
				<ref bean="moSgipParameter2454"/>
				<ref bean="mtsSgipParameter2454"/>
				<ref bean="mtsSgipDeliverAdapter2454"/>
			</list>
		</property>
		<!-- 命令集合 -->
		<property name="controlCmdMap">
			<map>
				<entry key="qePerf" value-ref="mtsQueueCmd2454"/>
                <entry key="view" value-ref="mtsGateWayViewCmd2454"/>
			</map>
		</property>
		<!-- 指标集合 -->
		<property name="kpiList">
			<list>
				<ref bean="mtsQueueKPI2454"/>
				<ref bean="mtsGateWayModuleKPI2454"/>
			</list>
		</property>
	</bean>

	<!-- 模块的指标配置 -->
	<bean id="mtsQueueKPI2454" class="com.lxt2.queuekc.QueueKPI">
		<property name="queue" ref="mtsSubmitQueue2454"/>
	</bean>
	<!-- 模块的命令配置 -->
	<bean id="mtsQueueCmd2454" class="com.lxt2.queuekc.QueuePerfCmd">
		<property name="kpiQueueList">
			<list>
				<ref bean="mtsQueueKPI2454"/>
			</list>
		</property>
	</bean>

	<bean id="mtsSubmitQueue2454" class="com.lxt2.queuekc.CacheQueue" destroy-method="destroy">
		<property name="cache">
			<bean class="ihandy.lxt20.persist.cache.FCCache"/>
		</property>
		<property name="queueName" value="mtsSubmit2454"/>
	</bean>
	
	<bean id="mtsPersistentSubmitQueueAdapter2454" class="com.lxt2.gateway.sms.queue.PersistentSubmitQueueAdapter">
		<property name="cacheQueue" ref="mtsSubmitQueue2454"/>
		<property name="hub" ref="hubImpl"/>
		<property name="spliterMap" ref="mtsSpliterMap2454"/>
		<property name="config" ref="mtsSgipGatewayConfig2454"/>
	</bean>
	<bean id="mtsPersistentRespQueueAdapter2454" class="com.lxt2.gateway.sms.queue.PersistentRespQueueAdapter">
		<property name="hub" ref="hubImpl"/>
		<property name="sid" ref="ndSid"/>
		<property name="config" ref="mtsSgipGatewayConfig2454"/>
		<property name="saveLogger" ref="saveLogger"/>
	</bean>
	<bean id="mtsPersistentReportQueueAdapter2454" class="com.lxt2.gateway.sms.queue.PersistentReportQueueAdapter">
		<property name="hub" ref="hubImpl"/>
		<property name="reportAdapter" ref="mtsSgipReportAdapter2454"/>
<!-- 		<property name="proc" value="1004"/> -->
		<property name="sid" ref="ndSid"/>
		<property name="config" ref="mtsSgipGatewayConfig2454"/>
	</bean>
	<bean id="mtsPersistentDeliverQueueAdapter2454" class="com.lxt2.gateway.sms.queue.PerisitentDeliverQueueAdapter">
		<property name="hub" ref="hubImpl" />
		<property name="deliverAdapter" ref="mtsSgipDeliverAdapter2454"/>
		<property name="sid" ref="ndSid"/>
		<property name="config" ref="mtsSgipGatewayConfig2454"/>
	</bean>
    <bean id="mtsGateWayModuleKPI2454" class="com.lxt2.gateway.sms.module.SmsGatewayModuleKPI">
        <property name="cacheQueue" ref="mtsSubmitQueue2454"/>
        <property name="dataGather" ref="mtsDataGather2454"/>
        <property name="module" ref="mtsGatewayModule2454"/>
    </bean>
    <bean id="mtsDataGather2454" class="com.lxt2.gateway.sms.GatewayDataGather" init-method="init" destroy-method="destroy">
    	<property name="path" value="${CLASSPATH}/${nodeID}/persistent/statistics/gateway2454.properties"/>
    </bean>
    <!-- 获取模块的监视信息 -->
	<bean id="mtsGateWayViewCmd2454" class="com.lxt2.base.module.ModuleKPICmd">
		<property name="kpi" ref="mtsGateWayModuleKPI2454"/>
	</bean>
	<!-- 拆分抽象bean -->
	<bean id="mtsAbstractSpliter2454" abstract="true" lazy-init="true">
		<property name="gatewayId" ref="gatewayId2454"></property>
		<property name="gatewayXmlParser" ref="gatewayXml"></property>
	</bean>
	<bean id="mtsSpliterMap2454" class="java.util.HashMap" scope="prototype">
		<constructor-arg index="0">
			<map>
				<entry key="15">
					<!-- 普通短信拆分类 -->
					<bean class="com.techcenter.spliter.CommSmsSpliter" parent="mtsAbstractSpliter2454" >
						<property name="smSplit">
							<bean class="com.techcenter.spliter.SMSplit" />
						</property>
					</bean>
				</entry>
				<entry key="31">
					<!-- wappush拆分类 -->
					<bean class="com.techcenter.spliter.WapPushSpliter" />
				</entry>
				<entry key="32">
					<!-- 长短信拆分类 -->
					<bean class="com.techcenter.spliter.LongSmsSpliter" parent="mtsAbstractSpliter2454"/>
				</entry>
			</map>
		</constructor-arg>
	</bean>
</beans>
